@model MyClass.Models.Slider

@{
    ViewBag.Title = "Cập nhật Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Img)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase" style="font-size:22px">
                                CẬP nhật Slider
                            </strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-success" type="submit" name="create"><i class="fas fa-save"></i>&nbsp&nbspCập nhật</button>
                            <a href="@Url.Action("Index","Slider")" class="btn btn-sm btn-info"><i class="fas fa-arrow-left"></i>&nbsp&nbspVề danh sách</a>

                        </div>
                    </div>
                </div>
                <div class="card-body">


                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-group">
                                    <label>Tên Slider<span class="text-danger">(*)</span></label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label>URL</label>
                                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                                </div>


                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Hình ảnh</label>
                                    <input name="img" type="file" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.Img, "", new { @class = "text-danger" })

                                </div>
                                @*<div class="form-group">
                                        <label>Vị trí</label>
                                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                    </div>*@


                                @*<div class="form-group">
                                        <label>Sắp xếp</label>
                                        @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrder, "Sắp xếp sau:", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                                    </div>*@

                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Xuất bản", Value = "1" }, new SelectListItem { Text = "Chưa xuất bản", Value = "2" } }, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}