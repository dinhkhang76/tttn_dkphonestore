@model IEnumerable<MyClass.Models.ProductInfo>
@{
    var category = ViewBag.Category;
}




@* danh mục nào không có sản phẩm thì không hiện ra *@
@if (Model.Count() != 0)
{
    <div class="headline">
        <br><h2 class="text-uppercase">@category.Name</h2>
        <a class="nav-link text-primary" style="text-align:right" href="~/@category.Slug">Xem tất cả</a>
        <div class="container">
            <div class="row mt-5">
                <div class="list-product-subtitle">
                </div>
                <div class="product-group">
                    <div class="row">


                        @foreach (var product in Model)
                        {
                            <div class="col-md-3 col-sm-6 col-12">

                                <div class="card card-product">
                                    <a href="~/@product.Slug">
                                        <img class="card-img-top imt-fluid" src="~/Public/images/products/@product.Img" alt="Ảnh sản phẩm @product.Name">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title text-dark text-center"><a href="~/@product.Slug" class="text-dark" style="text-decoration:none">@product.Name</a></h5><hr />
                                        <div class="product-price">
                                            <strong class="text-danger" style="font-size:18px">@string.Format("{0:0,0}", product.PriceSale)<sup>đ</sup></strong>
                                            <del class="text-dark"><span class="text-secondary" style="font-size:16px">@string.Format("{0:0,0}", product.Price)</span></del><sup class="text-dark">đ</sup>
                                        </div>
                                        <div class="btn-group w-100 my-3" role="group" aria-label="Basic example">
                                            <br><a onclick="myFunction()" href="@Url.Action("CartAdd", "Giohang", new { @productid = product.Id })" class="btn btn-outline-success">
                                                <i class="fas fa-shopping-cart"></i>
                                                @*<script>
                                                    function myFunction() {
                                                        alert("Thêm vào giỏ hàng thành công!");
                                                    }
                                                </script>*@

                                            </a>&nbsp
                                            <a href="~/@product.Slug" class="btn btn-outline-primary"><i class="fas fa-eye"></i></a>
                                        </div>
                                        @*{{-- <a href="" class="btn btn-primary"> Thêm vào giỏ hàng</a>  --}}*@
                                    </div>

                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
}