@model MyClass.Models.User
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<link href="~/Public/css/all.min.css" rel="stylesheet" />
<link href="~/Public/dist/css/adminlte.min.css" rel="stylesheet" />
<!--Made with love by Mutiullah Samim -->
<!--Bootsrap 4 CDN-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<!--Fontawesome CDN-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

@using (Html.BeginForm("DangKy", "Khachhang", FormMethod.Post))
{

    <br>
    <div class="register-box">

        <div class="container" style="margin-left: 170%">

            <div class="card">
                <div class="card-body register-card-body">
                    <h3 class="login-box-msg text-dark" style="font-weight: bold;">ĐĂNG KÝ</h3><hr><br>

                    <form action="DangKy" name="formregister" method="POST" enctype="multipart/form-data">
                        @Html.Partial("Message")

                        <div class="input-group mb-3">


                            <input name="username" require= value="" type="text" class="form-control" placeholder="Tên đăng nhập">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input name="email" required value="" type="email" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input name="fullname" required value="" type="text" class="form-control" placeholder="Họ tên">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user-friends"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input name="phone" required value="" type="number" class="form-control" placeholder="Số điện thoại">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-phone"></span>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                            <input name="address" required value="" type="text" class="form-control" placeholder="Địa chỉ">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-map-marker"></span>
                                </div>
                            </div>
                        </div>


                        @*<span class="text-dark" style="margin-bottom:30px">Hình đại diện (nếu có)</span><br />
                        <div class="input-group mb-3">
                            <input name="img" type="file" class="form-control">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-image"></span>
                                </div>
                            </div>
                        </div>*@

                        <p class="text-dark">
                            Giới tính:<br /> <input required style="margin-left: 10%" type="radio" id="1" name="gender" value="1">
                            <label for="gender">Nam</label>
                            <input required style="margin-left: 10%" type="radio" id="2" name="gender" value="2">
                            <label for="gender">Nữ</label>
                            <input required style="margin-left: 10%" type="radio" id="3" name="gender" value="3">
                            <label for="gender">Khác</label>
                        </p>



                        <div class="input-group mb-3">
                            <input name="password" type="password" required class="form-control" placeholder="Nhập mật khẩu">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user-lock"></span>
                                </div>
                            </div>
                        </div>







                        <div class="row">
                            <!-- /.col -->
                            <div class="col-12 ">
                                <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>

                    <div class="social-auth-links text-center">
                        <hr>
                        <p class="mb-0">
                            Bạn đã có tài khoản? <a href="~/dang-nhap" class="text-center">Đăng nhập </a>
                        </p>
                    </div>

                </div>
                <!-- /.form-box -->
            </div><!-- /.card -->
        </div>
    </div>

}

