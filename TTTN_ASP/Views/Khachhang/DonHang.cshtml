@model PagedList.IPagedList<MyClass.Models.OrderInfo>

@{
    var user = ViewBag.user;
}
@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
@using PagedList.Mvc;

<div class="container clearfix">
    <div class="row">
        @*<hr style="background-color:dodgerblue;height:3px;margin-top:20px">*@

        <div class="col-md-9" style="margin-left:180px;margin-top:30px">


            <h2 class="text-uppercase" style="color: darkslateblue;margin-left:300px;margin-top:30px">Đơn hàng của tôi</h2>
            <hr style="background-color:dodgerblue;height:3px;margin-top:20px">

            @Html.Partial("Message")

            @foreach (var ct in ViewBag.order)
            {


                <div class="row" style="margin-bottom:50px;margin-top:50px">
                    <div class="col-md-6"><b class="h5"> Mã đơn hàng: @ct.Id</b></div>
                    <div class="col-md-6 nav justify-content-end">
                        <p><a href="@Url.Action("HuyDon","KhachHang", new { id = ct.Id })" class="btn btn-outline-danger" style="text-decoration: none">Hủy đơn hàng</a></p>
                    </div>
                </div>
                <b>TÌNH TRẠNG ĐƠN HÀNG</b>

                if (ct.Status == 1)
                {
                    <div class="nav justify-content-end" style="width:2%">
                        <i class="fas fa-shipping-fast text-success" style="margin-bottom:5px;"></i>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 2%;background-color:dodgerblue"></div>
                    </div>
                    <div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-md-2" style="margin-right:10px">
                                <span>Chờ xác nhận</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspXác nhận thành công</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspĐang giao hàng</span>
                            </div>
                            <div class="col-md-2" style="margin-left:130px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbspGiao thành công</span>
                            </div>
                        </div>
                    </div><br /><br />
                }
                if (ct.Status == 2)
                {
                    <div class="nav justify-content-end" style="width:30%">
                        <i class="fas fa-shipping-fast text-success" style="margin-bottom:5px;"></i>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 30%;background-color:dodgerblue"></div>
                    </div>
                    <div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-md-2" style="margin-right:10px">
                                <span>Chờ xác nhận</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspXác nhận thành công</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspĐang giao hàng</span>
                            </div>
                            <div class="col-md-2" style="margin-left:130px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbspGiao thành công</span>
                            </div>
                        </div>
                    </div><br /><br />
                }
                if (ct.Status == 3)
                {
                    <div class="nav justify-content-end" style="width:58%">
                        <i class="fas fa-shipping-fast text-success" style="margin-bottom:5px;"></i>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 58%;background-color:dodgerblue"></div>
                    </div>
                    <div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-md-2" style="margin-right:10px">
                                <span>Chờ xác nhận</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspXác nhận thành công</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspĐang giao hàng</span>
                            </div>
                            <div class="col-md-2" style="margin-left:130px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbspGiao thành công</span>
                            </div>
                        </div>
                    </div><br /><br />
                }
                if (ct.Status == 4)
                {
                    <div class="nav justify-content-end" style="width:100%">
                        <i class="fas fa-shipping-fast text-success" style="margin-bottom:5px;"></i>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 100%;background-color:dodgerblue"></div>
                    </div>

                    <div>
                        <div class="row" style="margin-top:10px">
                            <div class="col-md-2" style="margin-right:10px">
                                <span>Chờ xác nhận</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspXác nhận thành công</span>
                            </div>
                            <div class="col-md-3" style="margin-right:5px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspĐang giao hàng</span>
                            </div>
                            <div class="col-md-2" style="margin-left:130px">
                                <span>&nbsp&nbsp&nbsp&nbsp&nbspGiao thành công</span>
                            </div>
                        </div>

                    </div><br /><br />
                }

                <hr />
            }
        </div>
    </div>
    
</div>

